    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.5",
    "@babel/preset-typescript": "^7.12.1",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.1",
    "@types/jest": "^26.0.15",
    "@types/react": "^16.14.0",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
